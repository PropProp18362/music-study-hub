{
  "version": 2,
  "functions": {
    "api/token.js": {
      "runtime": "nodejs18.x"
    },
    "api/refresh.js": {
      "runtime": "nodejs18.x"
    },
    "api/config.js": {
      "runtime": "nodejs18.x"
    },
    "api/health.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/token",
      "destination": "/api/token.js"
    },
    {
      "source": "/api/refresh", 
      "destination": "/api/refresh.js"
    },
    {
      "source": "/api/config",
      "destination": "/api/config.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "autoplay=(self), microphone=(), camera=(), geolocation=(), payment=()"
        }
      ]
    }
  ]
}